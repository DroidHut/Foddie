<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.foodproject.activity.LoginActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:src="@drawable/four"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_shadow_inverse"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLogoSignIn"
        android:text="foodondeal.in"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:layout_marginBottom="150dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_login_email"
        android:layout_width="300dp"
        android:layout_below="@+id/textLogoSignIn"
        android:layout_height="wrap_content"
        android:textColorHint="@color/primary"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/edit_login_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter email address"
            android:backgroundTint="@color/primary"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary"
            android:maxLines="1" 
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/input_login_email"
        android:id="@+id/input_login_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/primary"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/edit_login_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:backgroundTint="@color/primary"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_marginBottom="30dp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:layout_below="@+id/input_login_pass"
        android:text="SIGN IN"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#f5f5f5"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Forgot Password ?"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SignInBtn"/>
</RelativeLayout>
  
</LinearLayout>
